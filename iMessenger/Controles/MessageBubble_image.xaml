<UserControl x:Class="iMessenger.MessageBubble_image"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iMessenger"
             mc:Ignorable="d" Width="200" Height="225">
    
    <Border Padding="5">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Name="BubbleBorder"
                    CornerRadius="10"
                    Padding="5"
                    Background="{StaticResource ForegroundLightBrush}">


                <Image x:Name="Image"
                       MouseLeftButtonDown="OpenImage"
                       Height="180"
                       Margin="2"
                       Source="/Images/DefaultImage.jpg" />

            </Border>

            <Path Grid.Row="1"
                  HorizontalAlignment="Left"
                  Stroke="Black"
                  Margin="15 0 0 0"
                  Data="M 0,0 L 15,15 L 30,0 L 0,0"
                  StrokeThickness="0"
                  Fill="{StaticResource ForegroundLightBrush}" />
        </Grid>
    </Border>
</UserControl>
